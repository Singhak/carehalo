
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Hospitals
    match /hospitals/{hospitalId} {
      allow read: if request.auth.token.hospitalId == hospitalId;
      allow write: if false; // Only functions can create hospitals
    }

    // Patients
    match /patients/{patientId} {
      allow read, write: if request.auth.token.hospitalId == resource.data.hospitalId;
    }

    // Appointments
    match /appointments/{appointmentId} {
      allow read, write: if request.auth.token.hospitalId == resource.data.hospitalId;
    }

    // Prescriptions
    match /prescriptions/{prescriptionId} {
      allow read, write: if request.auth.token.hospitalId == resource.data.hospitalId;
    }

    // Staff
    match /staff/{staffId} {
      allow read, write: if request.auth.token.hospitalId == resource.data.hospitalId;
    }

    // Billing
    match /billing/{billingId} {
      allow read, write: if request.auth.token.hospitalId == resource.data.hospitalId;
    }
  }
}
