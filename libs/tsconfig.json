{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@cflock/shared-models": ["shared-models"],
      "@cflock/data-access-interfaces": ["data-access-interfaces"]
    }
  },
  "include": ["**/*"]
}